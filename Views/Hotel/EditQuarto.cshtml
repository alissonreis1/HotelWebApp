@model HotelWebApp.Models.Quarto

<h2>Editar Quarto</h2>

<form asp-action="EditQuarto" asp-controller="Hotel" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="HotelId" />

    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="form-control" />
    </div>

    

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Details" asp-controller="Hotel" asp-route-id="@Model.HotelId" class="btn btn-secondary">Cancelar</a>
</form>