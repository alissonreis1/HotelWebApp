@model HotelWebApp.Models.Hotel

<h2>Confirmar Exclusão</h2>

<p>Você tem certeza de que deseja excluir o hotel:</p>
<dl class="row">
    <dt class="col-sm-2">ID:</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Nome:</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

   

</dl>

<form asp-controller="Hotel" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
        <a asp-action="Index">Cancelar</a>
    </div>
</form>